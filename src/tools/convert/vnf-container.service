[Unit]
Description=VNF Docker Container
Requires=docker.service
After=docker.service

[Service]
Restart=always
ExecStart=/usr/bin/docker run -h %H --name vnf-container --privileged --network=host vnf-container bash -c "bash -c '\$SON_EMU_CMD'; while true; do sleep 1000; done"
ExecStop=/usr/bin/docker rm -f vnf-container

[Install]
WantedBy=default.target

